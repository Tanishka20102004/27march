#include <iostream>

int main() {
  // Write code here
  int age,human;
  std::cout<<"Welcome to the Cat Years program! This only works for cats older than 2 years old."<<std::endl;
  std::cout<<"ENTER YOUR CAR'S AGE:\n";
  std::cin>>age;
  human=(age-2)*4+24;
  std::cout<<"Your cat is "<<human<<" years old in human years.";
}
